{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make all -j 10 -C \"${workspaceFolder}/Builds/LinuxMakefile\"",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make clean -C \"${workspaceFolder}/Builds/LinuxMakefile\"",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Make (Debug)",
      "type": "shell",
      "command": "make -j 10 -C ${workspaceFolder}/Builds/LinuxMakefile CONFIG=Debug",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Clean and Build",
      "dependsOn": ["Clean", "Build"],
      "dependsOrder": "sequence",
      "group": "build"
    }
  ]
}
